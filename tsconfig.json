{
  "compilerOptions": {
    "target": "es6",
    "lib": ["esnext"],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "isolatedModules": true,
    "incremental": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
    }
  },
  "include":["./src/*", "src/lib/config.ts"],
  "exclude": ["node_modules"]
}
